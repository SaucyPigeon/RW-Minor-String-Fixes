<Patch>

	<!-- Plural of bison: bisons -> bison -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnKindDef[defName="Bison"]</xpath>	
		<value>
			<labelPlural>bison</labelPlural>
		</value>
	</Operation>
	
	<!-- Plural of muffalo: muffalos -> muffalo -->
	<!-- (Following rules of buffalo. Buffalo is most common plural, followed by buffaloes (accepted) and buffalos (contested). -->
	<!-- Also, "buffalo" as a plural is used in muffalo description. -->
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnKindDef[defName="Muffalo"]</xpath>
		<value>
			<labelPlural>muffalo</labelPlural>
		</value>
	</Operation>
	
